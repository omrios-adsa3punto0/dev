{
  "id": "template_formulario_maestro",
  "name": "Formulario Maestro de Productos Digitales",
  "steps": [
    {
      "step": 1,
      "title": "Información del Negocio",
      "fields": [
        { "name": "nombre_negocio", "label": "Nombre del Negocio", "type": "text", "required": true },
         { "name": "descripcion_breve", "label": "Descripción breve del negocio", "type": "textarea", "required": true, "iaAssist": true },

        { "name": "sector", "label": "Sector / Giro del negocio", "type": "select", "options": ["Restaurantes", "Salud", "Educación", "Servicios", "Comercio", "Otro"], "required": true },
        { "name": "direccion", "label": "Dirección completa", "type": "textarea", "required": true },
        { "name": "ciudad", "label": "Ciudad", "type": "text", "required": true },
        { "name": "estado", "label": "Estado", "type": "text", "required": true }
      ]
    },
    {
      "step": 2,
      "title": "Presencia Digital",
      "fields": [
        { "name": "pagina_web", "label": "Página web actual", "type": "url", "required": false },
        { "name": "redes_sociales", "label": "Redes sociales actuales", "type": "checkbox", "options": ["Facebook", "Instagram", "Twitter/X", "LinkedIn", "TikTok", "Otro"], "required": false },
        { "name": "otros_enlaces", "label": "Otros enlaces relevantes", "type": "textarea", "required": false }
      ]
    },
    {
      "step": 3,
      "title": "Información para contenido",
      "fields": [
        { "name": "productos_servicios", "label": "Lista de productos o servicios", "type": "textarea", "required": true },
        { "name": "publico_objetivo", "label": "Público objetivo", "type": "textarea", "required": true },
        { "name": "diferenciadores", "label": "Diferenciadores clave", "type": "textarea", "required": false }
      ]
    },
    {
      "step": 4,
      "title": "Contacto y atención del negocio",
      "fields": [
        { "name": "telefono_contacto", "label": "Teléfono de contacto", "type": "tel", "required": true },
        { "name": "whatsapp_contacto", "label": "WhatsApp de contacto", "type": "tel", "required": false },
        { "name": "email_contacto", "label": "Correo electrónico de contacto", "type": "email", "required": true },
        { "name": "horario_atencion", "label": "Horario de atención", "type": "textarea", "required": false }
      ]
    },
    {
      "step": 5,
      "title": "Identidad visual",
      "fields": [
        { "name": "colores_marca", "label": "Colores de marca", "type": "text", "required": false },
        { "name": "tipografia", "label": "Tipografía preferida", "type": "text", "required": false },
        { "name": "logo", "label": "Subir logotipo", "type": "file", "required": false, "accept": ".png,.jpg,.jpeg,.svg" }
      ]
    },
    {
      "step": 6,
      "title": "Estrategia y objetivos",
      "fields": [
        { "name": "objetivos_negocio", "label": "Objetivos principales del negocio", "type": "textarea", "required": true },
        { "name": "competidores", "label": "Competidores principales", "type": "textarea", "required": false }
      ]
    },
    {
      "step": 7,
      "title": "Contenido",
      "fields": [
        { "name": "texto_promocional", "label": "Texto promocional o eslogan", "type": "textarea", "required": false },
        { "name": "imagenes", "label": "Subir imágenes relevantes", "type": "file", "required": false, "accept": ".png,.jpg,.jpeg", "multiple": true }
      ]
    },
    {
      "step": 8,
      "title": "Configuración Redes Sociales",
      "fields": [
        { "name": "facebook_url", "label": "Facebook URL", "type": "url", "required": false },
        { "name": "instagram_url", "label": "Instagram URL", "type": "url", "required": false },
        { "name": "tiktok_url", "label": "TikTok URL", "type": "url", "required": false }
      ]
    },
    {
      "step": 9,
      "title": "Observaciones adicionales",
      "fields": [
        { "name": "comentarios", "label": "Comentarios adicionales", "type": "textarea", "required": false }
      ]
    }
  ]
}
